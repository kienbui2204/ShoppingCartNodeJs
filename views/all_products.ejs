<% include layout/header %>

<div class="row products">
    <% products.forEach(function(p) { %>
        <div class="col-sm-4 p">
            <div class="card m-0">
                <img  class="card-img-top" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                <div class="card-body text-center">
                    <a href="/products/<%= p.category %>/<%= p.slug %>" class="card-title a"><%= p.title %></a>
                    <p class="card-text">$<%= parseFloat(p.price).toFixed(2) %></p>
                    <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
                </div>
            </div>

        </div>
    <% }); %>
</div>

<% include layout/footer %>
