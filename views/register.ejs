<% include layout/header %>

<h1> <%= title %> </h1>
<form method="POST" action="/users/register">
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" name="name" class="form-control" placeholder="Name" id="">
    </div>

    <div class="form-group">
        <label for="">Email</label>
        <input type="text" name="email" class="form-control" placeholder="Email" id="">
    </div>

    <div class="form-group">
        <label for="">Username</label>
        <input type="text" name="username" class="form-control" placeholder="Username" id="">
    </div>

    <div class="form-group">
        <label for="">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Password" id="">
    </div>

    <div class="form-group">
        <label for="">Confirm Password</label>
        <input type="password" name="password2" class="form-control" placeholder="Confirm Password" id="">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

<% include layout/footer %>
