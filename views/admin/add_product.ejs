<%- include('../layout/adminheader') %>
    <h2 class="page-title"> Add a product</h2>
    <a href="/admin/products" class="btn btn-primary">Back to all product</a>
    <br><br>

    <form method="POST" action="/admin/products/add-product" enctype="multipart/form-data">
        <!-- title -->
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title" id="">
        </div>

        <!-- slug -->
        <div class="form-group">
            <label for="">Slug</label>
            <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug" id="">
        </div>

        <!-- description -->
        <div class="form-group">
            <label for="">Description</label>
            <textarea class="form-control" id="ta" cols="30" rows="10" name="desc" value="<%= desc %>"    placeholder="Description"></textarea>
        </div>

        <!-- category -->
        <div class="form-group">
            <label for="">Category</label>
            <select name="category" class="form-control">
                <% categories.forEach(cat => { %>
                    <option value="<%= cat.slug %>"><%= cat.title %></option>
                <% }) %>
            </select>
        </div>

        <!-- Price -->
        <div class="form-group">
            <label for="">Price</label>
            <input type="text" class="form-control" name="price" value="<%= price %>" placeholder="Price">
        </div>

        <!-- Image -->
        <div class="form-group">
            <label for="">Image</label>
            <input type="file" class="form-control" name="image" id="img">
            <img src="#" id="imgPreview" style="margin: 20px;">
        </div>

        <br>
        <!-- Button -->
        <button class="btn btn-secondary">Submit</button>
    </form>
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload=function(e) {
                    $('#imgPreview').attr('src', e.target.result).width(100).height(100);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $('#img').change(function() {
            readURL(this);
        });
    </script>
<%- include('../layout/adminfooter') %>