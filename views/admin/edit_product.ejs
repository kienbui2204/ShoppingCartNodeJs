<%- include('../layout/adminheader') %>
    <h2 class="page-title"> Edit a product</h2>
    <a href="/admin/products" class="btn btn-primary">Back to all product</a>
    <br><br>

    <form method="POST" action="/admin/products/edit-product/<%= id %> " enctype="multipart/form-data">
        <!-- title -->
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
        </div>

        <!-- slug -->
        <div class="form-group">
            <label for="">Slug</label>
            <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug" id="">
        </div>

        <!-- description -->
        <div class="form-group">
            <label for="">Description</label>
            <textarea class="form-control" id="ta" cols="10" rows="5" name="desc" value="<%= desc %>" placeholder="Description"></textarea>
        </div>

        <!-- category -->
        <div class="form-group">
            <label for="">Category</label>
            <select name="category" class="form-control">
                <% categories.forEach(cat => { %>
                    <option value="<%= cat.slug %>"
                        <% if (cat.slug==category){ %>
                            selected="selected"
                        <% } %>
                    ><%= cat.title %></option>
                <% }); %>
            </select>
        </div>

        <!-- Price -->
        <div class="form-group">
            <label for="">Price</label>
            <input type="text" class="form-control" name="price" value="<%= price %>" placeholder="Price">
        </div>

        <!-- Current Image -->
        <div class="form-group">
            <label for="">Current Image</label>
            <p>
                <% if (image=="") { %>
                    <img src="/images/noimage.png" id="picture" alt="">
                <% } else { %>
                    <img src="/product_images/<%= id %>/<%= image %>" id="picture" alt="">
                <% } %>
            </p>
        </div>
        <!-- Upload -->
        <div class="form-group">
            <label for="">Upload Image</label>
            <input type="file" class="form-control" name="image" id="img">
            <img src="#" id="imgPreview" style="margin: 20px;">
        </div>
        <input type="hidden" name="pimage" value="<%= image %>">
        <br>
        <!-- Button -->
        <button class="btn btn-default">Submit</button>
    </form>
    <hr>
    <!-- Gallery -->
    <h3 class="page-header">Gallery</h3>

    <ul class="gallery">
        <% galleryImages.forEach(image => { %>
            <% if (image != "thumbs") { %>
                <li>
                    <img id="imgPreview" width="100px" src="/product_images/<%= id %>/gallery/<%= image %>" alt="">&nbsp;
                    <a class="confirmDeletion" href="/admin/products/delete-image/<%= image %>?id=<%= id %>">Delete</a>
                </li>
            <% } %>
        <% }); %>
    </ul>

    <br><br>

    <form action="/admin/products/product-gallery/<%= id %>" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm">
        <div class="fallback">
            <input type="file" name="file" multiple>
            <input type="submit" value="Upload">
        </div>
    </form>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.2/basic.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.2/dropzone.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.2/dropzone.js"></script>

    <script>
        // Image
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload=function(e) {
                    $('#imgPreview').attr('src', e.target.result).width(100).height(100);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $('#img').change(function() {
            readURL(this);
        });

        // Dropzone
        Dropzone.options.dropzoneForm = {
            acceptedFiles: "image/*",
            init: function() {
                this.on("queuecomplete", function(file){
                    setTimeout(function(){
                        location.reload()
                    }, 1000);
                });
            }
        }
    </script>
<%- include('../layout/adminfooter') %>