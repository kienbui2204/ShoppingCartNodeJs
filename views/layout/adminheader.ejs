<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Area</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/adminstyles.css">
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/" target="_blank">Shopping Cart</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <!-- Page -->
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin/pages">Page</a>
              </li>
              <!-- Category -->
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin/categories">Categories</a>
              </li>
              <!-- Product -->
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin/products">Products</a>
              </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><a class="nav-link" href="/users/logout">Logout</a></li>
            </ul>
          </div>
        </div>
    </nav>

    <main class="container">
    <%- messages('messages',locals) %>

    <% if (errors) {%>
      <% errors.forEach(function(error){ %>
        <div class="alert alert-danger">
          <%= error.msg %>
        </div>
      <% });%>
    <% }%>

